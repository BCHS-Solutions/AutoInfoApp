<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bchs_solutions.android.autoinfoapp.LuftdruckActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivCarTopView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvLuftdruckMessage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reifendruck ist in Ordnung"
        android:id="@+id/tvLuftdruckMessage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2,0"
        android:id="@+id/tvDruckVorneLinks"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2,0"
        android:id="@+id/tvDruckVorneRechts"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@+id/tvDruckVorneLinks"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2,0"
        android:id="@+id/tvDruckHintenLinks"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/ivCarTopView"
        android:layout_alignStart="@+id/tvDruckVorneLinks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2,0"
        android:id="@+id/tvDruckHintenRechts"
        android:layout_alignTop="@+id/tvDruckHintenLinks"
        android:layout_alignEnd="@+id/tvDruckVorneRechts" />
</RelativeLayout>
